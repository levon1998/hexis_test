{% extends 'layout/base.html.twig' %}

{% block title %}Brands{% endblock %}

{% block body %}
    <h1 style="display: flex; justify-content: space-between">
        Brands
        <a href="{{ path('brand_new') }}"><button type="button" class="btn btn-primary">Create new</button></a>
    </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Status</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.name }}</td>
                <td>{{ brand.status ? 'Yes' : 'No' }}</td>
                <td>{{ brand.createdAt ? brand.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('brand_edit', {'id': brand.id}) }}">
                        <button type="button" class="btn btn-info btn-sm">
                            <i class="fas fa-edit"></i>
                        </button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
