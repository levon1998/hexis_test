{% extends 'layout/base.html.twig' %}

{% block title %}Points of rent {% endblock %}

{% block body %}
    <h1 style="display: flex; justify-content: space-between">
        Points of rent
        <a href="{{ path('vendor_new') }}"><button type="button" class="btn btn-primary">Create new</button></a>
    </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Status</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vendor in vendors %}
            <tr>
                <td>{{ vendor.id }}</td>
                <td>{{ vendor.name }}</td>
                <td>{{ vendor.address }}</td>
                <td>{{ vendor.status ? 'Yes' : 'No' }}</td>
                <td>{{ vendor.createdAt ? vendor.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('vendor_edit', {'id': vendor.id}) }}">
                        <button type="button" class="btn btn-info btn-sm">
                            <i class="fas fa-edit"></i>
                        </button>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
